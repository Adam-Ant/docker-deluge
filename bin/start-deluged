#!/bin/sh
set -e

[ -n "$UMASK" ] && umask "$UMASK"

# Run in the foreground by default
DAEMON='-d'

for arg in $@; do
    case $arg in
        --bg) DAEMON='';;
    esac
done

LOGFILE=/tmp/deluged-log
rm -f $LOGFILE
mkfifo $LOGFILE
mkdir -p /config/logs
tee /config/logs/deluged-$(date -u +"%FT%H%M").log < $LOGFILE &

exec deluged $DAEMON -P $(mktemp) -c /config -L info -l $LOGFILE
